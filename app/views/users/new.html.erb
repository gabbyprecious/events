<h1>Would you like to Sign Up?</h1>

<%= form_with model: @user, local: true do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name, autofocus: true %><br>

  <%= f.label :email %><br>
  <%= f.text_field :email, autofocus: true %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.submit "Sign Up" %>
<% end %>