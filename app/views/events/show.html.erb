<h3>Title:</h3><p><%= @event.title %></p>

<h3>Description:</h3><p><%= @event.description %></p>

<h3>Host:</h3><p><%= @event.user.name %></p>

<h3>Price:</h3><p><%= @event.price %></p>

<h3>Active? :</h3><p><%= @event.active %></p>

<h3>Status:</h3><p><%= @event.status %></p>

<% if @event.user_id == current_user.id%>
  <ul>
    <li><%= link_to "Edit", edit_event_path(@event) %></li>
    <li><%= link_to "Destroy", event_path(@event),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></li>
  </ul>
<% end %>
