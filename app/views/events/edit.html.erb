<h1>Edit Event</h1>

<%= form_with model: @event, local: true do |f| %>
    <div>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
        <% @event.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= f.label :status %><br>
        <%= f.select :status, ["free","paid"]%>
        <% @event.errors.full_messages_for(:status).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= f.label :active %><br>
        <%= f.select :active, [true, false]%>
        <% @event.errors.full_messages_for(:active).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= f.label :price %><br>
        <%= f.number_field :price%>
        <% @event.errors.full_messages_for(:price).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= f.label :description %><br>
        <%= f.text_area :description %><br>
        <% @event.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
        <% end %>
    </div>
    <%= f.submit "Confirm Changes" %>
<% end %>

<ul>
  <li><%= link_to "Destroy", event_path(@event),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
</ul>